{
  "yaml.schemas": {
    "kubernetes": "*.y*ml",
    "http://json.schemastore.org/ansible-stable-2.7": "*ansible*.y*ml"
  },
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  }
  
  "python.jediEnabled": false,
  "diagnostic.hintSign": "──",
  "diagnostic.infoSign": "──",
  "diagnostic.warningSign": "──",
  "diagnostic.errorSign": "══",
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["rust"],
  "coc.preferences.colorSupport": false,
  "coc.source.emoji.triggerCharacters": [":"],
  "coc.source.emoji.filetypes": ["markdown", "gitcommit"],
  "coc.source.file.ignoreHidden": false,
  "coc.source.around.firstMatch": false,
  "coc.source.buffer.firstMatch": false,
  "coc.source.syntax.firstMatch": false,
}
